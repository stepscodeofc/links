---
import BaseLayout from "../layouts/BaseLayout.astro"
import Links from "../components/Links.astro"
import '../styles/Listas.css'

const pageTitle = "Steps Code"

const allLinks = await Astro.glob("../pages/links/*.md")
---
<BaseLayout pageTitle={pageTitle}>
  <img src="LogoSemFundo.png" width="200" alt="Logo">
  <h1>{pageTitle}</h1>
  <h2>Desenvolvedor Full-Stack</h2>
  <p>Bem vindo!</p>
  <ul>
    <li>{allLinks.filter((link) => link.frontmatter.tag === "social").map((link) => (<Links target={link.frontmatter.target} rel={link.frontmatter.rel} link={link.frontmatter.link}  icon={link.frontmatter.icon} title={link.frontmatter.title} />))}</li>
    <li>{allLinks.filter((link) => link.frontmatter.title === "Trabalhos").map((link) => (<Links target={link.frontmatter.target} rel={link.frontmatter.rel} link={link.frontmatter.link}  icon={link.frontmatter.icon} title={link.frontmatter.title} />))}</li>
  </ul>
</BaseLayout>

<style>
  img {
    border-radius: 100px;
    animation: bounce 2s infinite;
    margin-top: 20px;
  }

  @keyframes bounce {
    40% {transform: translateY(-10px);}
    60% {transform: translateY(-5px);}
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
  }
</style>