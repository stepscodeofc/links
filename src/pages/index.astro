---
import BaseLayout from "../layouts/BaseLayout.astro"
import Links from "../components/Links.astro"
import { targetExternal, relExternal, targetInternal, relInternal } from "../components/Links.astro"

const pageTitle = "Steps Code"

const linkGitHub = "https://github.com/stepscodeofc"
const iconGitHub = "fab fa-github"

const linkInstagram = "https://instagram.com/steps.code"
const iconInstagram = "fab fa-instagram"

const linkWork = "/work"
const iconWork = "fas fa-code"
---
<BaseLayout pageTitle={pageTitle}>
  <img src="LogoSemFundo.png" width="200" alt="Logo">
  <h1>{pageTitle}</h1>
  <h2>Desenvolvedor Full-Stack</h2>
  <p>Bem vindo!</p>
  <Links target={targetExternal} rel={relExternal} link={linkGitHub} icon={iconGitHub}>GitHub</Links>
  <Links target={targetExternal} rel={relExternal} link={linkInstagram} icon={iconInstagram}>Instagram</Links>
  <Links target={targetInternal} rel={relInternal} link={linkWork} icon={iconWork}>Trabalhos</Links>
</BaseLayout>

<style>
  img {
    border-radius: 100px;
    animation: bounce 2s infinite;
    margin-top: 20px;
  }

  @keyframes bounce {
    40% {transform: translateY(-10px);}
    60% {transform: translateY(-5px);}
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
  }
</style>